<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片缓存："
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/setting_clear_pic_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1.0"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="已用50M/共100M"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <Button
            android:id="@+id/setting_clear_pic_btn"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:background="@drawable/video_details_btn_selector"
            android:text="清除"
            android:textColor="@color/detail_point"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏记录："
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/setting_clear_colection_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1.0"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="共56部"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <Button
            android:id="@+id/setting_clear_colection_btn"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:background="@drawable/video_details_btn_selector"
            android:text="清除"
            android:textColor="@color/detail_point"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放记录："
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/setting_clear_cache_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1.0"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="共56条"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <Button
            android:id="@+id/setting_clear_cache_btn"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:background="@drawable/video_details_btn_selector"
            android:text="清除"
            android:textColor="@color/detail_point"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义频道："
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/setting_clear_channel_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1.0"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="共10个频道"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <Button
            android:id="@+id/setting_clear_channed_btn"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:background="@drawable/video_details_btn_selector"
            android:text="清除"
            android:textColor="@color/detail_point"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页应用:"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/setting_clear_app_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1.0"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="22dp" />

        <Button
            android:id="@+id/setting_clear_topapp_btn"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:background="@drawable/video_details_btn_selector"
            android:text="清除"
            android:textColor="@color/detail_point"
            android:textSize="24dp" />
    </LinearLayout>

    <Button
        android:id="@+id/setting_clear_all_btn"
        android:layout_width="300dip"
        android:layout_height="50dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:background="@drawable/video_details_btn_selector"
        android:text="全部清除"
        android:textColor="@color/detail_point"
        android:textSize="24dp" />

</LinearLayout>