<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="440dp"
    android:layout_height="480dp"
    android:background="@drawable/setup_bg_left" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@id/user_set_info_person_id"
            style="@style/set_button_leftpart"
            android:text="账号/UID" />

        <Button
            android:id="@id/user_set_info_person_email"
            style="@style/set_button_leftpart"
            android:layout_marginTop="60dp"
            android:text="E-mail" />

        <Button
            android:id="@id/user_set_info_person_nickname"
            style="@style/set_button_leftpart"
            android:layout_marginTop="120dp"
            android:text="姓名" />

        <Button
            android:id="@id/user_set_info_person_qq"
            style="@style/set_button_leftpart"
            android:layout_marginTop="180dp"
            android:text="QQ" />

        <Button
            android:id="@id/user_set_info_person_point"
            style="@style/set_button_leftpart"
            android:layout_marginTop="240dp"
            android:text="积分" />

        <Button
            android:id="@id/user_set_info_person_reg"
            style="@style/set_button_leftpart"
            android:layout_marginTop="300dp"
            android:text="注册时间" />

        <Button
            android:id="@id/user_set_info_person_login"
            style="@style/set_button_leftpart"
            android:layout_marginTop="360dp"
            android:text="登录时间" />

        <Button
            android:id="@id/user_set_info_person_this"
            style="@style/set_button_leftpart"
            android:layout_marginTop="420dp"
            android:text="本次登录" />

        <Button
            android:id="@id/user_set_info_person_last"
            style="@style/set_button_leftpart"
            android:layout_marginTop="480dp"
            android:text="上次登录" />
    </FrameLayout>

</ScrollView>