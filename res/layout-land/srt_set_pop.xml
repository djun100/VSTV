<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="370dp"
        android:layout_margin="2dp"
        android:background="@drawable/dia_msg_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="字幕列表"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="1dp"
            android:background="#b2b2b2" />

        <ListView
            android:id="@id/srt_set_pop_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="370dp"
        android:layout_margin="2dp"
        android:background="@drawable/dia_msg_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="大小"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="1dp"
            android:background="#b2b2b2" />

        <ListView
            android:id="@id/srt_set_pop_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="370dp"
        android:layout_margin="2dp"
        android:background="@drawable/dia_msg_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="颜色"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="1dp"
            android:background="#b2b2b2" />

        <ListView
            android:id="@id/srt_set_pop_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="370dp"
        android:layout_margin="2dp"
        android:background="@drawable/dia_msg_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="位置"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="1dp"
            android:background="#b2b2b2" />

        <ListView
            android:id="@id/srt_set_pop_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="370dp"
        android:layout_margin="2dp"
        android:background="@drawable/dia_msg_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="字幕修正"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="1dp"
            android:background="#b2b2b2" />

        <ListView
            android:id="@id/srt_set_pop_settingTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>
    </LinearLayout>

</LinearLayout>