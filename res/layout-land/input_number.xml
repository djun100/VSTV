<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:background="@drawable/setup_bg_left"
    android:orientation="vertical" >

    <TextView
        android:id="@id/input_dialog_title"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/setup_bg_right"
        android:paddingLeft="20dp"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="请在下面的文本框中输入内容："
            android:textColor="#4b4b4b"
            android:textSize="22dp" />

        <EditText
            android:id="@id/input_number_et"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg_selector"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_view_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>