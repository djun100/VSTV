<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/update_dialog_title"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/menu_bg_n"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="检测更新"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/update_dialog_proline"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:background="@drawable/menu_bg_n"
        android:gravity="center_horizontal" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="正在检测，请稍候……"
            android:textColor="@color/detail_point"
            android:textSize="24dp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/update_dialog_msgline"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/dia_msg_bg"
        android:visibility="gone" >

        <TextView
            android:id="@+id/update_dialog_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/detail_point"
            android:textSize="24dp" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/update_dialog_btnline"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <Button
            android:id="@+id/update_dialog_comfire"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1.0"
            android:background="@drawable/vod_top_next_s"
            android:text="现在更新"
            android:textColor="@color/white"
            android:textSize="26dp" />

        <Button
            android:id="@+id/update_dialog_cancle"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.0"
            android:background="@drawable/vod_top_next_s"
            android:text="下次更新"
            android:textColor="@color/white"
            android:textSize="26dp" />

        <Button
            android:id="@+id/update_dialog_forgive"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.0"
            android:background="@drawable/vod_top_next_s"
            android:text="忽略此版"
            android:textColor="@color/white"
            android:textSize="26dp" />
    </LinearLayout>

</LinearLayout>