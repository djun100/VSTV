<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="420dip"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用  户  名："
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/setting_regest_username"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg_selector"
                    android:ellipsize="start"
                    android:inputType="textCapCharacters"
                    android:maxLength="14"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/setting_regest_check_name"
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="2dip"
                android:text="检测用户名是否可用"
                android:textColor="#b2b2b2"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电子邮箱："
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/setting_regest_email"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg_selector"
                    android:ellipsize="start"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="24dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/setting_regest_check_email"
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="2dip"
                android:text="用于找回密码的联系方式,也可登录"
                android:textColor="#b2b2b2"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密        码："
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/setting_regest_password1"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg_selector"
                    android:ellipsize="start"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认密码："
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/setting_regest_password2"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg_selector"
                    android:ellipsize="start"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="24dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/setting_regest_check_pwd"
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="2dip"
                android:text="检测两次密码输入是否一致"
                android:textColor="#b2b2b2"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号码："
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/setting_regest_phone"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg_selector"
                    android:ellipsize="start"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="24dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:orientation="vertical" >

            <TextView
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="拍摄下方二维码即可在手机上进行注册，更方便快捷"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="200dip"
                android:layout_height="200dip"
                android:layout_marginTop="20dip"
                android:padding="25dip"
                android:src="@drawable/user_regest" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/setting_regest_btn"
        android:layout_width="300dip"
        android:layout_height="50dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:background="@drawable/video_details_btn_selector"
        android:text="新用户注册"
        android:textColor="@color/detail_point"
        android:textSize="24dp" />

</LinearLayout>